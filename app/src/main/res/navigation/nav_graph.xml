<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.notesapp.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_editNoteFragment"
            app:destination="@id/editNoteFragment" />

        <action
            android:id="@+id/action_homeFragment_to_lockedNotesFragment"
            app:destination="@id/lockedNotesFragment" />
    </fragment>

    <fragment
        android:id="@+id/editNoteFragment"
        android:name="com.example.notesapp.ui.note.EditNoteFragment"
        tools:layout="@layout/fragment_edit_note">
        <argument
            android:name="note"
            android:defaultValue="@null"
            app:argType="com.example.notesapp.repository.Notes"
            app:nullable="true" />

        <argument
            android:name="isLocked"
            android:defaultValue="false"
            app:argType="boolean" />
    </fragment>

    <fragment
        android:id="@+id/lockedNotesFragment"
        android:name="com.example.notesapp.ui.LockedNotesFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_lockedNotesFragment_to_editNoteFragment"
            app:destination="@id/editNoteFragment" />
    </fragment>
</navigation>